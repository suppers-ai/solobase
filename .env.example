# Database
# For production, use a strong password and enable SSL:
# DATABASE_URL=postgres://user:STRONG_PASSWORD@host:5432/dbname?sslmode=require
DATABASE_URL=postgres://solobase:solobase123@localhost:5432/solobase?sslmode=disable

# Storage (S3/MinIO)
STORAGE_TYPE=s3
S3_ENDPOINT=http://localhost:9000
# IMPORTANT: Use strong credentials in production
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=solobase
S3_REGION=us-east-1
# IMPORTANT: Always use SSL in production (S3_USE_SSL=true)
S3_USE_SSL=false

# Mail (SMTP)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@solobase.local
# IMPORTANT: Enable TLS in production (SMTP_USE_TLS=true)
SMTP_USE_TLS=false

# Application
PORT=8080                     # API server port
API_PORT=8080                 # Used by frontend dev server to proxy API requests
FRONTEND_PORT=5173            # Frontend dev server port (optional)
BASE_URL=http://localhost:8080  # Base URL for OAuth callbacks
# CRITICAL SECURITY: Generate strong random secrets for production!
# You can generate a secure secret with: openssl rand -base64 32
# JWT_SECRET must be at least 32 characters
# JWT_SECRET=<REQUIRED: Generate with 'openssl rand -base64 32'>
# SESSION_SECRET=<REQUIRED: Generate with 'openssl rand -base64 32'>
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production
LOG_LEVEL=DEBUG
ENABLE_SIGNUP=true
ENABLE_API=true

# OAuth Providers (optional - leave empty to disable)
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Facebook OAuth
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Admin account
# IMPORTANT: Use a strong password in production (minimum 12 characters, mixed case, numbers, symbols)
# Consider using a password manager to generate a secure password
ADMIN_EMAIL=admin@solobase.local
ADMIN_PASSWORD=admin123  # WARNING: Change this immediately in production!

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60