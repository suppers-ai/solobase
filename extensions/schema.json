{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Solobase Extension Configuration Schema",
  "type": "object",
  "properties": {
    "extensions": {
      "type": "object",
      "patternProperties": {
        "^[a-z][a-z0-9-]*$": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether the extension is enabled"
            },
            "config": {
              "type": "object",
              "description": "Extension-specific configuration"
            }
          },
          "required": ["enabled"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["extensions"],
  "additionalProperties": false
}