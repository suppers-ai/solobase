# Production Configuration Example for Solobase
# IMPORTANT: This file contains recommended production settings
# Copy to .env and replace all placeholder values with actual secure credentials

# Database (PostgreSQL)
# Use a strong password and always enable SSL in production
DATABASE_URL=postgres://solobase_user:CHANGE_TO_STRONG_PASSWORD@your-db-host:5432/solobase?sslmode=require

# Storage (S3/MinIO)
STORAGE_TYPE=s3
S3_ENDPOINT=https://s3.amazonaws.com  # Or your S3-compatible endpoint
S3_ACCESS_KEY=CHANGE_TO_YOUR_ACCESS_KEY
S3_SECRET_KEY=CHANGE_TO_YOUR_SECRET_KEY
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_USE_SSL=true  # Always use SSL in production

# Mail (SMTP)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=CHANGE_TO_SMTP_PASSWORD
SMTP_FROM=noreply@yourdomain.com
SMTP_USE_TLS=true  # Always use TLS in production

# Application
PORT=8080
BASE_URL=https://yourdomain.com  # Your production domain with HTTPS

# CRITICAL: Generate these secrets using: openssl rand -base64 32
# Never use default values in production!
JWT_SECRET=REQUIRED_CHANGE_THIS_USE_OPENSSL_RAND_BASE64_32
SESSION_SECRET=REQUIRED_CHANGE_THIS_USE_OPENSSL_RAND_BASE64_32

LOG_LEVEL=INFO  # Use INFO or WARN in production, not DEBUG
ENABLE_SIGNUP=false  # Consider disabling public signup in production
ENABLE_API=true

# OAuth Providers (optional - only configure if using)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Admin account
# Use a strong, unique password (12+ chars, mixed case, numbers, symbols)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE_TO_VERY_STRONG_PASSWORD_MIN_12_CHARS

# CORS - Configure for your specific domain
CORS_ALLOWED_ORIGINS=https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate limiting - Adjust based on your needs
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=30  # More restrictive for production

# Additional Production Recommendations:
# 1. Use environment-specific files: .env.production, .env.staging
# 2. Never commit .env files to version control
# 3. Use a secrets management service (AWS Secrets Manager, Vault, etc.)
# 4. Regularly rotate credentials and secrets
# 5. Monitor for exposed credentials in your codebase
# 6. Enable database connection pooling for better performance
# 7. Configure proper backup strategies for database and storage
# 8. Set up monitoring and alerting for application health